# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf

# Shell scripts
*.sh text eol=lf

# YAML
*.yaml text eol=lf
*.yml text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# Config files
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
